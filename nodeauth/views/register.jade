extends layout

block content
  h2.page-header Register
  p Please register using the form
  form(method="post", action="/users/register", enctype='multipart/form-data')
    .form-group
    label Name
    input.form-control(name='name', type='text', placeholder='Enter Name', value="Loda")
    .form-group
    label Email
    input.form-control(name='email', type='email', placeholder='Enter Email')
    .form-group
    label Username
    input.form-control(name='username', type='text', placeholder='Username')
    .form-group
    label Password
    input.form-control(name='password', type='password', placeholder='Enter Password')
    .form-group
    label Confirm Password
    input.form-control(name='password2', type='password', placeholder='Re-Enter Password')
    .form-group
    label Profile Image
    input.form-control(name='profileImage', type='file', placeholder='Re-Enter Password')
    .form-group
    input.btn.orange(type="submit", name="submit", value="register")
